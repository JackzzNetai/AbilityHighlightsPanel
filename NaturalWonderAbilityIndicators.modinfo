      <File>Lysefjord_Dummy_Ability.sql</File>
    </UpdateDatabase>

    <ImportFiles id="UAH_IMPORT_FILES">
      <File>UnitPanel.xml</File>
    </ImportFiles>

    <AddUserInterface id="UAH_LOGIC">
      <File>UnitAbilityHighlights.xml</File>
    </AddUserInterface>
  </InGameActions>

  <Files>
    <File>UnitPanel.xml</File>
    <File>UnitAbilityHighlights.xml</File>
